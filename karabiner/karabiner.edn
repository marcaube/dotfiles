{
    :templates {
        :launch "open -a %s"
        :hs "open -g hammerspoon://hyper?action=%s\\&target=%s"
    }

    :devices {
        :moonlander [{:product_id 6505 :vendor_id 12951}]
        :apple-wireless [{:product_id 598 :vendor_id 1452}]
        :macbook-pro [{:product_id 832 :vendor_id 1452}]
        :macbook [{:product_id 633 :vendor_id 1452}]
        :corne-ish-zen [{:product_id 0 :vendor_id 0}]
    }

    :layers {
        :launch {:key :caps_lock :alone {:key :escape} :condi [:!moonlander :!corne-ish-zen]}
    }

    :main [
        {
            :des "Default Launch layer"
            :rules [:launch
                [:s [:launch "Slack.app"]]
                [:d [:launch "Discord.app"]]
                [:b [:launch "Safari.app"]]
                [:k [:launch "kitty.app"]]
                [:m [:launch "Mail.app"]]
                [:c [:launch "Calendar.app"]]
                [:f [:launch "Fellow.app"]]
                [:z [:launch "zoom.us.app"]]
                [:r [:launch "Bear.app"]]
                [:t [:launch "Tweetbot.app"]]
                [:i [:launch "IntelliJ\\ IDEA.app"]]
            ]
        }
        {
            :des "Split KB Launch layer"
            :rules [
                [:condi :moonlander :corne-ish-zen]
                [:!!s [:launch "Slack.app"]]
                [:!!d [:launch "Discord.app"]]
                [:!!b [:launch "Safari.app"]]
                [:!!k [:launch "kitty.app"]]
                [:!!m [:launch "Mail.app"]]
                [:!!c [:launch "Calendar.app"]]
                [:!!f [:launch "Fellow.app"]]
                [:!!z [:launch "zoom.us.app"]]
                [:!!r [:launch "Bear.app"]]
                [:!!t [:launch "Tweetbot.app"]]
                [:!!i [:launch "IntelliJ\\ IDEA.app"]]
            ]
        }
        {
            :des "Default Hammerspoon"
            :rules [:launch
                [:o [:hs "open" "default"]]
                [:w [:hs "slack-rw-wave" "default"]]
            ]
        }
        {
            :des "Split KB Hammerspoon"
            :rules [
                [:condi :moonlander :corne-ish-zen]
                [:!!o [:hs "open" "default"]]
                [:!!w [:hs "slack-rw-wave" "default"]]
            ]
        }
    ]
}

; !  | means mandatory
; #  | means optional
; C  | left_command
; T  | left_control
; O  | left_option
; S  | left_shift
; F  | fn
; Q  | right_command
; W  | right_control
; E  | right_option
; R  | right_shift
; P  | caps_lock
; !! | mandatory command + control + optional + shift (hyper)
; ## | optional any
